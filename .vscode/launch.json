{
    "version": "0.2.0",
    "configurations": [
    
        {
            "name": ".NET Core Launch (web api)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/WeatherForecastAPI/bin/Debug/net6.0/WeatherForecastAPI.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/WeatherForecastAPI/",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/WeatherForecastAPI/Views"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch website",
            "runtimeExecutable": "yarn",
            "cwd": "${workspaceFolder}/src/portal-home/",
            "runtimeArgs": [
                "serve"
            ]
        }
    ]
}